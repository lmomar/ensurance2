{% extends "FOSUserBundle::layout_login.html.twig"%}
{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-vertical">
        <div class="module-head">
            <h3>Authentification</h3>
        </div>
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="module-body">
            <div class="control-group">
                <div class="controls row-fluid">

                    <input class="span12" placeholder="Email" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>
            </div>
            <div class="control-group">
                <div class="controls row-fluid">

                    <input class="span12" placeholder="Mot de passe" type="password" id="password" name="_password" required="required" />
                </div>
            </div>
        </div>
        <div class="module-foot">
            <div class="control-group">
                <div class="controls clearfix">
                    <button type="submit" class="btn btn-primary pull-right">Login</button>
                    <label class="checkbox">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Se rappeler de moi
                    </label>
                </div>
            </div>
        </div>
    </form>
{% endblock fos_user_content %}

