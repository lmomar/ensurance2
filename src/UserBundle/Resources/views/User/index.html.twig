{% extends 'FOSUserBundle::layout.html.twig' %}

{% block content %}
    <div class="span9">
        <div class="content">
            <div class="btn-controls">
                <div class="btn-box-row row-fluid">
                    <a href="#" class="btn-box big span4"><i class=" icon-random"></i><b>65%</b>
                        <p class="text-muted">
                            Growth</p>
                    </a><a href="#" class="btn-box big span4"><i class="icon-user"></i><b>15</b>
                        <p class="text-muted">
                            New Users</p>
                    </a><a href="#" class="btn-box big span4"><i class="icon-money"></i><b>15,152</b>
                        <p class="text-muted">
                            Profit</p>
                    </a>
                </div>
                <!--/#btn-controls-->
                <div class="module">
                    <div class="module-head">
                        <h3>Liste des utilisateurs</h3>
                        <button class="btn btn-primary btn-sm pull-right">Nouvel utilisateur</button>
                    </div>
                    <div class="module-body table">
                        <table class="datatable-1 table table-bordered table-striped	 display">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nom complet</th>
                                <th>Téléphone</th>
                                <th>Néé le</th>
                                <th>Email</th>
                                <th>Actif</th>
                                <th data-sortable="true">Crée le</th>
                                <th>Role</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.id}}</td>
                                    <td>{{ user.nom ~ ' ' ~ user.prenom }}</td>
                                    <td>{{ user.phone }}</td>
                                    <td>{{ user.dateNaissance is empty ? "--" : user.dateNaissance|date('m-d-Y') }}</td>

                                    <td>{{ user.email }}</td>
                                    <td><input type="checkbox" disabled="" checked="{{user.enabled}}"></td>
                                    <td>{{ user.created|date("d-m-Y") }}</td>
                                    <td>
                                        {% if user.hasRole('ROLE_ADMIN')%}Assureur
                                        {% elseif user.hasRole('ROLE_EXPERT')%}
                                            Expert
                                        {% elseif user.hasRole('ROLE_CONSTATEUR')%}
                                            Constateur
                                        {% elseif user.hasRole('ROLE_ASSISTANT')%}
                                            Assistant
                                        {% elseif user.hasRole('ROLE_USER')%}
                                            Client
                                        {% endif %}

                                    </td>
                                    <td>
                                        <a class="btn btn-primary btn-xs"href="{{ path('edit_user',{'id' : user.id})}}">
                                            <i class="icon-edit"></i></a>
                                        <a class="btn btn-danger btn-xs"href="#">
                                            <i class="icon-remove"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>




{% endblock %}
