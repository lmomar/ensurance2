{% extends 'FOSUserBundle::layout.html.twig' %}

{% block content %}
    {{ parent() }}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-info">
                <header class="panel-heading"><h2 class="panel-title">Modification Utilisateur</h2></header>
                <div class="panel-body">
                    
                    <form class="form-horizontal" action="{{ path('edit_user',{'id' : user.id}) }}" method="post">


                        <div class="form-group">
                            <div class="col-sm-2"><label>Nom</label></div>
                            <div class="col-sm-6">{{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}</div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-2"><label>Prénom</label></div>
                            <div class="col-sm-6">{{ form_widget(form.prenom, { 'attr': {'class': 'form-control'} }) }}</div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-2"><label>Téléphone</label></div>
                            <div class="col-sm-6">{{ form_widget(form.phone, { 'attr': {'class': 'form-control'} }) }}</div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-2"><label>Date naissance</label></div>
                            <div class="col-sm-6">{{ form_widget(form.date_naissance, { 'attr': {'class': 'form-control','type' : 'date'} }) }}</div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-2"><label>Date driver license</label></div>
                            <div class="col-sm-6">{{ form_widget(form.date_driver_license, { 'attr': {'class': 'form-control','type' : 'date'} }) }}</div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-2"><label>Role</label></div>
                            <div class="col-sm-6">
                                {{ form_widget(form.roles,{'attr' : {'class' : 'form-control'}})}}

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-2"><label>Email</label></div>
                            <div class="col-sm-6">{{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}</div>
                        </div>

                        <div class="form-group">
                            {{ form_widget(form.submit,{'attr' : {'class' : 'btn btn-primary'}})}}
                            <a href="{{ path('users_list')}}" class="btn btn-warning">Annuler</a>
                        </div>
                        <input id="form__token" name="form[_token]" value="{{ csrf_token('form') }}" type="hidden">

                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
